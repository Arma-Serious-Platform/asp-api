generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model File {
  id             String           @id @default(uuid())
  bucket         String
  filename       String
  url            String
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  User           User[]
  Squad          Squad[]
  Mission        Mission[]
  MissionVersion MissionVersion[]
}

model User {
  id                          String            @id @default(uuid())
  avatarId                    String?
  avatar                      File?             @relation(fields: [avatarId], references: [id])
  email                       String            @unique
  nickname                    String            @unique
  password                    String
  steamId                     String?           @unique
  createdAt                   DateTime          @default(now())
  updatedAt                   DateTime          @updatedAt
  abilities                   SoldierAbility[]
  squadId                     String?
  activationToken             String?
  activationTokenExpiresAt    DateTime?
  status                      UserStatus        @default(ACTIVE)
  role                        UserRole          @default(USER)
  isMissionReviewer           Boolean           @default(false)
  resetPasswordToken          String?
  resetPasswordTokenExpiresAt DateTime?
  avatarUrl                   String?
  bannedUntil                 DateTime?
  isEmailVerified             Boolean           @default(false)
  missions                    Mission[]
  missionComments             MissionComment[]
  side                        Side?
  leadingSquad                Squad?            @relation("SquadLeader")
  squadInvites                SquadInvitation[]
  squad                       Squad?            @relation("SquadMembers", fields: [squadId], references: [id])
  games                       Game[]
  telegramUrl                 String?
  discordUrl                  String?
  youtubeUrl                  String?
  twitchUrl                   String?
}

model Squad {
  id          String            @id @default(uuid())
  name        String            @unique
  leaderId    String            @unique
  sideId      String
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  activeCount Int               @default(0)
  description String?
  tag         String            @unique
  leader      User              @relation("SquadLeader", fields: [leaderId], references: [id])
  side        Side              @relation(fields: [sideId], references: [id])
  invites     SquadInvitation[]
  members     User[]            @relation("SquadMembers")
  logoId      String?
  logo        File?             @relation(fields: [logoId], references: [id])
  recruiting  Boolean           @default(true)
}

model SquadInvitation {
  id        String            @id @default(uuid())
  userId    String
  squadId   String
  status    SquadInviteStatus @default(PENDING)
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  squad     Squad             @relation(fields: [squadId], references: [id])
  user      User              @relation(fields: [userId], references: [id])
}

model Side {
  id               String   @id @default(uuid())
  name             String   @unique
  type             SideType @default(UNASSIGNED)
  leaderId         String?  @unique
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  serverId         String?
  leader           User?    @relation(fields: [leaderId], references: [id])
  server           Server?  @relation(fields: [serverId], references: [id])
  squads           Squad[]
  gamesAttackSide  Game[]   @relation("GameAttackSide")
  gamesDefenseSide Game[]   @relation("GameDefenseSide")
}

model Server {
  id        String       @id @default(uuid())
  name      String       @unique
  status    ServerStatus @default(ACTIVE)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  ip        String       @default("127.0.0.1")
  port      Int          @default(2302)
  sides     Side[]
}

model MissionWeaponry {
  id               String          @id @default(uuid())
  name             String
  description      String?
  count            Int
  type             MissionGameSide
  missionVersion   MissionVersion  @relation("MissionVersionWeaponry", fields: [missionVersionId], references: [id])
  missionVersionId String
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
}

model MissionVersion {
  id                 String            @id @default(uuid())
  version            String
  missionId          String
  mission            Mission           @relation(fields: [missionId], references: [id])
  status             MissionStatus     @default(PENDING_APPROVAL)
  attackSideType     MissionGameSide
  defenseSideType    MissionGameSide
  attackSideSlots    Int
  defenseSideSlots   Int
  attackSideName     String
  defenseSideName    String
  weaponry           MissionWeaponry[] @relation("MissionVersionWeaponry")
  changesDescription String?
  games              Game[]
  rating             Int?
  fileId             String
  file               File              @relation(fields: [fileId], references: [id])
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
}

model MissionComment {
  id        String   @id @default(uuid())
  missionId String
  mission   Mission  @relation(fields: [missionId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Island {
  id        String    @id @default(uuid())
  name      String
  code      String?   @unique
  missions  Mission[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Mission {
  id              String           @id @default(uuid())
  name            String
  description     String
  authorId        String?
  author          User?            @relation(fields: [authorId], references: [id])
  missionVersions MissionVersion[]
  imageId         String?
  image           File?            @relation(fields: [imageId], references: [id])
  comments        MissionComment[]
  islandId        String?
  island          Island?          @relation(fields: [islandId], references: [id])
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  games           Game[]
}

model Game {
  id            String   @id @default(uuid())
  name          String
  date          DateTime
  weekendId     String
  weekend       Weekend  @relation(fields: [weekendId], references: [id])
  mission       Mission  @relation(fields: [missionId], references: [id])
  missionId     String
  missionVersion MissionVersion @relation(fields: [missionVersionId], references: [id])
  missionVersionId String
  adminId       String?
  admin         User?     @relation(fields: [adminId], references: [id])
  attackSideId  String
  attackSide    Side     @relation("GameAttackSide", fields: [attackSideId], references: [id])
  defenseSideId String
  defenseSide   Side     @relation("GameDefenseSide", fields: [defenseSideId], references: [id])
  position      Int @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Weekend {
  id          String   @id @default(uuid())
  name        String
  description String
  games       Game[]
  published   Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum ServerStatus {
  ACTIVE
  INACTIVE
}

enum MissionStatus {
  APPROVED
  PENDING_APPROVAL
  CHANGES_REQUESTED
}

enum SideType {
  BLUE
  RED
  UNASSIGNED
}

enum UserStatus {
  ACTIVE
  BANNED
}

enum UserRole {
  OWNER
  TECH_ADMIN
  GAME_ADMIN
  USER
}

enum SoldierAbility {
  COMMANDER
  MEDIC
  SNIPER
  ANTI_TANK
  ANTI_AIR
  HELI_PILOT
  JET_PILOT
  TANK_CREW
  VEHICLE_CREW
}

enum SquadInviteStatus {
  PENDING
  ACCEPTED
  REJECTED
  LEAVED
}

enum MissionGameSide {
  BLUE
  RED
  GREEN
}
